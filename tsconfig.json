{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019", "dom", "esnext.bigint"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./js",
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "static/js"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
