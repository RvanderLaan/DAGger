{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018", "dom", "esnext.bigint"],
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./js",
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "static/js"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
